	<repositories>
		<repository>
			<id>central</id>
			<name>Maven Repository Switchboard</name>
			<layout>default</layout>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>clojars.org</id>
			<url>http://clojars.org/repo</url>
		</repository>
		<repository>
			<id>mvnrepo</id>
			<name>mvnrepo</name>
			<url>http://mvnrepository.com</url>
		</repository>
		<repository>
			<id>mvnrepo2</id>
			<name>mvnrepo2</name>
			<url>http://repo1.maven.org/maven2/</url>
		</repository>
	</repositories>
</project>
